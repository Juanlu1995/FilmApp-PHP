{% extends 'layout.twig' %}

{% block content %}
    <div class="container">
        <form class="form-signin" method="post">
            <h2 class="form-signin-heading">Registro</h2>
            <div class="form-group {% if errors['email'] %}has-error{% endif %}">
                <label for="email" class="sr-only">Email</label>
                <input type="text" id="email" name="email" class="form-control" placeholder="Email" autofocus>
            </div>
            {{ generateAlert(errors, 'email') }}
            <button class="btn btn-lg btn-primary btn-block" type="submit">Pedir invitaci√≥n</button>
        </form>
    </div>

{% endblock %}